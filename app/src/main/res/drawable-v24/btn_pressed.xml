<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <gradient
        android:angle="90"
        android:startColor="#1E4A1E"
        android:endColor="#143214"

        />

    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp"
        />

    <stroke
        android:width="1dp"
        android:color="#FFFFFF"
        />

    <corners
        android:radius="20dp"

        />

    

</shape>