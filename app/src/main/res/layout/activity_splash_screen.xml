<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/titulo_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Passos para Utilização" />

    <TextView
        android:textSize="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo_splash"
        android:id="@+id/passo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="1º - Permita o acesso à sua LOCALIZAÇÃO para identificação da LATITUDE E LONGITUDE da ocorrência" />

    <TextView
        android:textSize="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passo1"
        android:id="@+id/passo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="2º - Permita o acesso à sua CÂMERA para CAPTURA DA IMAGEM DO ANIMAL" />

    <TextView
        android:textSize="18dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passo2"
        android:id="@+id/passo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="3º - Faça o LOGIN com o GMAIL para ter acesso às suas ocorrências criadas"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="279dp"
        android:layout_height="262dp"
        android:layout_above="@id/titulo_splash"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/rodobicho_splash" />


</RelativeLayout>